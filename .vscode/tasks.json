{
    "tasks": [
        {
            "type": "shell",
            "label": "LearnOpenGL Tasks",
            "command": "C:/MinGW/bin/g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "-lglad",
                "-lglfw3dll"
            ],
            "options": {
                "cwd": "C:/MinGW/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}